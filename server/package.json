{
  "name": "server",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun run ./dist/index.js",
    "dev": "bun run src/index.ts",
    "watch": "bun --watch src/index.ts",
    "hot": "bun --hot src/index.ts",
    "build": "bun build src/index.ts --out-dir dist",
    "generate": "prisma generate",
    "db": "prisma db",
    "db:pull": "prisma db pull",
    "db:push": "prisma db push",
    "db:seed": "prisma db seed",
    "prisma:migrate": "prisma migrate dev --name init"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "express": "^5.2.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@types/node": "^25.0.3",
    "@types/pg": "^8.16.0",
    "dotenv": "^17.2.3",
    "pg": "^8.16.3",
    "prisma": "^7.2.0"
  }
}