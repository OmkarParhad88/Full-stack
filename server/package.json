{
  "name": "server",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun run ./dist/index.js",
    "dev": "bun run src/index.ts",
    "watch": "nodemon --watch src/views --watch src --ext ts,js,ejs,html --exec bun run src/index.ts",
    "hot": "bun --hot src/index.ts",
    "build": "bun run build.ts",
    "generate": "prisma generate",
    "db": "prisma db",
    "db:pull": "prisma db pull",
    "db:push": "prisma db push",
    "db:seed": "prisma db seed",
    "prisma:migrate": "prisma migrate dev --name init"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/nodemailer": "^7.0.4",
    "express": "^5.2.1",
    "nodemon": "^3.1.11"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@types/ejs": "^3.1.5",
    "@types/node": "^25.0.3",
    "@types/pg": "^8.16.0",
    "bullmq": "^5.66.2",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.10",
    "nodemailer": "^7.0.11",
    "pg": "^8.16.3",
    "prisma": "^7.2.0"
  }
}
